name: Publish

on:
  release:
    types: [published]

jobs:
  build:

    runs-on: ubuntu-latest

    steps:
    - uses: actions/checkout@v4
    - name: Login to crates.io
      run: cargo login $CRATES_IO_TOKEN
      env:
        CRATES_IO_TOKEN: ${{ secrets.CRATES_TOKEN }}
    - name: Dry run publish
      run: cargo publish --dry-run
    - name: Publish
      run: cargo publish
